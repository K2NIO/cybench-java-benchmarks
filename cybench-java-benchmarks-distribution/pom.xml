                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <skipAssembly>${skip.json.assembly}</skipAssembly>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptors>
                                <descriptor>${release.json}/${release.deploy.zip.assembly}</descriptor>
                                <descriptor>${release.json}/${release.deploy.gz.assembly}</descriptor>
                                <descriptor>${release.json}/${release.deploy.dir.assembly}</descriptor>
                            </descriptors>
                            <outputDirectory>${release.deploy.dir.json}</outputDirectory>
                            <attach>${build.assemblies.attach}</attach>
                            <finalName>${release.deploy.finalName}-json-${project.json.version}</finalName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>io-deploy</id>
