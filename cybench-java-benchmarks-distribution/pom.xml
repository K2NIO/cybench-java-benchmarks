                                <include>${release.deploy.finalName}-mapping-${project.version}/</include>
                                <include>${release.deploy.finalName}-mapping-${project.version}.*</include>
                            </includes>
                        </fileset>
                        <!--FILESET PLACEHOLDER DO NOT DELETE -->
                    </filesets>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <tarLongFileMode>gnu</tarLongFileMode>
                </configuration>
                <executions>
                    <execution>
                        <id>string-deploy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <skipAssembly>${skip.string.assembly}</skipAssembly>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptors>
                                <descriptor>${release.string}/${release.deploy.zip.assembly}</descriptor>
                                <descriptor>${release.string}/${release.deploy.gz.assembly}</descriptor>
                                <descriptor>${release.string}/${release.deploy.dir.assembly}</descriptor>
                            </descriptors>
                            <outputDirectory>${release.deploy.dir.string}</outputDirectory>
                            <attach>${build.assemblies.attach}</attach>
                            <finalName>${release.deploy.finalName}-strings-${project.string.version}</finalName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>number-deploy</id>
                        <phase>package</phase>
