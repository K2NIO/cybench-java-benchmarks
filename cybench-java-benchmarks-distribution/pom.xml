                    </execution>
                    <execution>
                        <id>matrices-deploy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <skipAssembly>${skip.matrices.assembly}</skipAssembly>
