                            </descriptors>
                            <outputDirectory>${release.deploy.dir.mapping}</outputDirectory>
                            <attach>${build.assemblies.attach}</attach>
                            <finalName>${release.deploy.finalName}-mapping-${project.version}</finalName>
                        </configuration>
                    </execution>
                    <!--EXECUTION PLACEHOLDER DO NOT DELETE -->
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
