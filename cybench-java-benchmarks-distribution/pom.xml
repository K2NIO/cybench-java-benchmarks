                            <descriptors>
                                <descriptor>${release.httpServers}/${release.deploy.zip.assembly}</descriptor>
                                <descriptor>${release.httpServers}/${release.deploy.gz.assembly}</descriptor>
                                <descriptor>${release.httpServers}/${release.deploy.dir.assembly}</descriptor>
                            </descriptors>
                            <outputDirectory>${release.deploy.dir.httpServers}</outputDirectory>
                            <attach>${build.assemblies.attach}</attach>
                            <finalName>${release.deploy.finalName}-http-servers-${project.httpServers.version}</finalName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>security-crypto-deploy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <skipAssembly>${skip.security.crypto.assembly}</skipAssembly>
