<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.cybench.client</groupId>
        <artifactId>cybench-java-benchmarks</artifactId>
        <version>1.0.0</version>
    </parent>

    <artifactId>cybench-java-benchmarks-distribution</artifactId>
    <packaging>pom</packaging>

    <properties>
        <release.deploy.name>cybench-java-benchmark</release.deploy.name>
        <release.deploy.finalName>${release.deploy.name}</release.deploy.finalName>
        <release.deploy.zip.assembly>zipDeployAssembly.xml</release.deploy.zip.assembly>
        <release.deploy.gz.assembly>gzDeployAssembly.xml</release.deploy.gz.assembly>
        <release.deploy.dir.assembly>dirDeployAssembly.xml</release.deploy.dir.assembly>
        <build.assemblies.attach>false</build.assemblies.attach>
        <assembly.line.endings>unix</assembly.line.endings>
    </properties>

    <profiles>
        <profile>
            <id>win-ln</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <properties>
                <assembly.line.endings>crlf</assembly.line.endings>
            </properties>
        </profile>
    </profiles>

    <build>
        <defaultGoal>clean package</defaultGoal>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.1.0</version>
                <inherited>false</inherited>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>${release.deploy.dir.string}</directory>
                            <includes>
                                <include>${release.deploy.finalName}-strings-${project.string.version}/</include>
                                <include>${release.deploy.finalName}-strings-${project.string.version}.*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>${release.deploy.dir.json}</directory>
                            <includes>
                                <include>${release.deploy.finalName}-json-${project.version}/</include>
                                <include>${release.deploy.finalName}-json-${project.version}.*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>${release.deploy.dir.io}</directory>
                            <includes>
                                <include>${release.deploy.finalName}-io-${project.version}/</include>
                                <include>${release.deploy.finalName}-io-${project.version}.*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>${release.deploy.dir.list}</directory>
                            <includes>
                                <include>${release.deploy.finalName}-lists-${project.version}/</include>
                                <include>${release.deploy.finalName}-lists-${project.version}.*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>${release.deploy.dir.number}</directory>
                            <includes>
                                <include>${release.deploy.finalName}-numbers-${project.version}/</include>
                                <include>${release.deploy.finalName}-numbers-${project.version}.*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>${release.deploy.dir.matrices}</directory>
                            <includes>
                                <include>${release.deploy.finalName}-matrices-${project.version}/</include>
                                <include>${release.deploy.finalName}-matrices-${project.version}.*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>${release.deploy.dir.httpServers}</directory>
                            <includes>
                                <include>${release.deploy.finalName}-http-servers-${project.version}/</include>
                                <include>${release.deploy.finalName}-http-servers-${project.version}.*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>${release.deploy.dir.security.crypto}</directory>
                            <includes>
                                <include>${release.deploy.finalName}-security-${project.version}/</include>
                                <include>${release.deploy.finalName}-security-${project.version}.*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>${release.deploy.dir.security-rsa}</directory>
                            <includes>
                                <include>${release.deploy.finalName}-security-rsa-${project.version}/</include>
                                <include>${release.deploy.finalName}-security-rsa-${project.version}.*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>${release.deploy.dir.trace}</directory>
                            <includes>
                                <include>${release.deploy.finalName}-trace-${project.version}/</include>
                                <include>${release.deploy.finalName}-trace-${project.version}.*</include>
                            </includes>
