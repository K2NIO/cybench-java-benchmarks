                            </descriptors>
                            <outputDirectory>${release.deploy.dir.matrices}</outputDirectory>
                            <attach>${build.assemblies.attach}</attach>
                            <finalName>${release.deploy.finalName}-matrices-${project.matrices.version}</finalName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>httpServers-deploy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <skipAssembly>${skip.httpServers.assembly}</skipAssembly>
